<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CheckOutScreen">

    <Button
        android:id="@+id/checkoutButton"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="276dp"
        android:text="Checkout" />

    <TextView
        android:id="@+id/Room_Number_Label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/checkoutButton"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="118dp"
        android:layout_marginRight="118dp"
        android:layout_marginBottom="167dp"
        android:text="Your Room Number:"
        android:textColor="#F5F2F2"
        android:textColorHint="#00FFFFFF" />

    <EditText
        android:id="@+id/Room_Number_Input"
        android:layout_width="129dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/checkoutButton"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="109dp"
        android:layout_marginRight="109dp"
        android:layout_marginBottom="39dp"
        android:ems="10"
        android:hint="Room Number"
        android:textColorHint="#FFFFFF" />


</RelativeLayout>